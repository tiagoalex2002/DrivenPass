// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int      @id @default(autoincrement())
  email    String  @unique
  password String
  Credentials Credentials[]
  SafeNotes   SafeNotes[]
}

model Credentials {
  id       Int      @id @default(autoincrement())
  title    String  @unique
  userId   Int
  User     Users   @relation(fields: [userId], references: [id])
  username String
  password String
  url      String
}

model SafeNotes {
   id       Int      @id @default(autoincrement())
   title    String  @unique
   note     String
   userId   Int
   User     Users   @relation(fields: [userId], references: [id])
}

model Cards {
  id           Int      @id @default(autoincrement())
  cardNumber   Int
  expireDate   String
  password     String
  isVirtual    Boolean
  Type         String
}
